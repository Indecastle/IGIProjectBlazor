                                <th>Name</th>
                                <th>Size</th>
                                <th>LastModified</th>
                                <th>Owner</th>
                                <th>ETag</th>
                                <th>StorageClass</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Dir == null || Dir.IsUpdating)
                            {
                                //<p><em>Loading...</em></p>
                                @for (int i = 0; i < PageSize; i++)
                                {
                                    <tr class="blazor-row-item" style="height: 46px;">
                                        <td scope="col"></td>
                                        <td scope="col"></td>
                                        <td scope="col"></td>
