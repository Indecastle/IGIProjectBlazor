<table class="table table-striped">
    <thead>
        <tr class="blazor-grid-header">
            <th>Name</th>
            <th>Size</th>
            <th>LastModified</th>
            <th>Owner</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ItemList)
        {
            <tr class="blazor-row-item">
                <td scope="col" @ondblclick="@(async ()=> await OnClickRow(item))">@item.Name</td>
                <td scope="col">@item.Size</td>
                <td scope="col">@item.LastModified</td>
                <td scope="col">@item.Owner</td>
            </tr>
        }
    </tbody>
</table>

<ul class="pagination">
    <li class="page-item">
        <a class="page-link bg-info text-white" @onclick=@(async () => SetPagerSize("back"))>&laquo</a>
    </li>
    <li class="page-item">
        <a class="page-link bg-light text-dark" @onclick=@(async () => NavigateToPage("previous"))>Prev</a>
    </li>
    @for (int i = startPage; i <= endPage; i++)
    {
        var currentPage = i;
        <li class="page-item @(currentPage==curPage?"active":"")" aria-current="page">
            <a class="page-link" @onclick=@(async () => updateList(currentPage))> @currentPage <span class="sr-only">(current)</span></a>
        </li>
    }
    <li class="page-item">
        <a class="page-link bg-light text-dark" @onclick=@(async () => NavigateToPage("next"))>Next</a>
    </li>
    <li class="page-item">
        <a class="page-link bg-info text-white" @onclick=@(async () => SetPagerSize("forward"))>&raquo;</a>
    </li>
    <span class="pagebutton btn btn-link disabled">Page @curPage of @totalPages</span>
</ul>

@code {
    int totalPages;
    int curPage;
    int pagerSize;

    int startPage;
    int endPage;

    [Parameter]
    public Func<S3FileObject, Task> OnClickRow { get; set; }

    [Parameter]
    public int PageSize { get; set; }

    IEnumerable<S3FileObject> ItemList { get; set; }
    //IEnumerable<S3FileObject> Items { get; set; }
    [Parameter]
    public S3Dir Dir { get; set; }

    protected override async Task OnInitializedAsync()
    {
        pagerSize = 5;
        curPage = 1;

        ItemList = Dir.S3Objs.Skip((curPage - 1) * PageSize).Take(PageSize);
        totalPages = (int)Math.Ceiling(Dir.S3Objs.Count() / (decimal)PageSize);

        SetPagerSize("forward");
    }

    public void updateList(int currentPage)
    {
        ItemList = Dir.S3Objs.Skip((currentPage - 1) * PageSize).Take(PageSize);
        curPage = currentPage;
        this.StateHasChanged();
    }

    public void SetPagerSize(string direction)
    {
        if (direction == "forward" && endPage < totalPages)
        {
            startPage = endPage + 1;
            if (endPage + pagerSize < totalPages)
            {
                endPage = startPage + pagerSize - 1;
            }
            else
            {
                endPage = totalPages;
            }
            this.StateHasChanged();
        }
        else if (direction == "back" && startPage > 1)
        {
            endPage = startPage - 1;
            startPage = startPage - pagerSize;
        }
    }

    public void NavigateToPage(string direction)
    {
        if (direction == "next")
        {
            if (curPage < totalPages)
            {
                if (curPage == endPage)
                {
                    SetPagerSize("forward");
                }
                curPage += 1;
            }
        }
        else if (direction == "previous")
        {
            if (curPage > 1)
            {
                if (curPage == startPage)
                {
                    SetPagerSize("back");
                }
                curPage -= 1;
            }
        }

        updateList(curPage);
    }
}
