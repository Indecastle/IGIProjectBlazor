@page
@model BlazorApp2.Areas.Auth.Pages.Account.Manage.Admin.UserEditModel
@attribute [Authorize(Roles = "admin")]
@{
    ViewBag.Title = "Редактирование пользователя";
    ViewData["ActivePage"] = ManageNavPages.AdminUsers;
}
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Input.Id" />
    </div>
    <div class="form-group">
        <label asp-for="Input.Email" class="control-label">Email</label>
        <input type="text" asp-for="Input.Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Input.Year" class="control-label">Год рождения</label>
        <input type="number" asp-for="Input.Year" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-warning" />
    </div>
</form>

<div class="form-group">
    <label>Begin voorverkoop periode</label>
    <input type="date" name="bday" max="3000-12-31"
           min="1000-01-01" class="form-control">
</div>
<div class="form-group">
    <label>Einde voorverkoop periode</label>
    <input type="date" name="bday" min="1000-01-01"
           max="3000-12-31" class="form-control">
</div>